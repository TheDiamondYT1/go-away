<Window x:Class="MC10Editor.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MC10Editor"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Copying file..." Height="202" Width="506">
    <Grid>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Margin="56,66,0,0" VerticalAlignment="Top" Width="391" Height="18"/>
        <Label x:Name="labelCopying"  HorizontalAlignment="Left" Margin="17,3,0,0" VerticalAlignment="Top">
            <Label.RenderTransform>
                <ScaleTransform ScaleX="1.8" ScaleY="1.8" />
            </Label.RenderTransform>
            Copying file
        </Label>
        <Button x:Name="buttonLaunch" Visibility="Hidden" Content="Launch Minecraft" HorizontalAlignment="Left" Margin="344,119,0,0" VerticalAlignment="Top" Width="125" Height="33" Click="buttonLaunch_Click" />
    </Grid>
</Window>
